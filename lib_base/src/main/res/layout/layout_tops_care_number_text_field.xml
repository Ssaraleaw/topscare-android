<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="text"
            type="String" />

        <variable
            name="title"
            type="String" />

        <variable
            name="hint"
            type="String" />

        <variable
            name="isTextFocused"
            type="Boolean" />

        <variable
            name="maxLength"
            type="Integer" />

        <variable
            name="endTextDrawable"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="uiState"
            type="com.android.topscare.lib_base.state.DataState" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/textFieldContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textFieldTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{title}"
            android:enabled="@{isTextFocused}"
            android:textAppearance="@style/TextAppearance.BodySmall"
            android:textColor="@color/gray_700"
            app:isVisible="@{title.length() > 0}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="Tile"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText"
            android:textAppearance="@style/TextAppearance.BodyTiny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:hint="@{hint}"
            android:maxLength="@{maxLength}"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:text="@={text}"
            android:drawableEnd="@{endTextDrawable}"
            android:paddingStart="10dp"
            android:paddingTop="12dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="8dp"
            android:imeOptions="actionDone"
            android:textColorHint="@color/gray_400"
            android:textColor="@{(uiState.isDisable())? @color/gray_500 : @color/gray_700}"
            android:background="@{(uiState.isDisable())? @drawable/bg_input_field_disable : (uiState.isError()) ? @drawable/bg_input_field_decoration_error : @drawable/bg_input_field_decoration}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textFieldTitleTextView"
            app:layout_constraintVertical_bias="0.0"/>
        <TextView
            android:id="@+id/textFieldErrorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:text="@{uiState.toErrorMessage()}"
            android:textAppearance="@style/TextAppearance.BodyTiny"
            android:textColor="@color/error"
            app:isVisible="@{uiState.isError()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText"
            tool:text="Hereâ€™s a hint that might help you."/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>