<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/mainMenuFragment">
    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.android.topscare.ui.main.MainMenuFragment"
        tools:layout="@layout/fragment_main_menu"
        android:label="MainMenuFragment">
        <action
            android:id="@+id/action_mainMenuFragment_to_ProductInfoDialogFragment"
            app:destination="@id/productInfoDialogFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_from_right" />
    </fragment>
    <dialog android:id="@+id/productInfoDialogFragment"
        android:name="com.android.topscare.ui.check.ProductInfoDialogFragment"
        tools:layout="@layout/fragment_product_info_dialog"
        android:label="ProductInfoDialogFragment"/>
    <dialog
        android:id="@+id/aboutDialogFragment"
        android:name="com.android.topscare.ui.setting.about.AboutDialogFragment"
        android:label="AboutDialogFragment"
        tools:layout="@layout/fragment_about_dialog"/>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.android.topscare.ui.setting.SettingFragment"
        android:label="SettingFragment"
        tools:layout="@layout/fragment_setting">
        <action
            android:id="@+id/action_settingFragment_to_aboutDialogFragment"
            app:destination="@id/aboutDialogFragment" />
        <action
            android:id="@+id/action_settingFragment_to_tutorialFragment"
            app:destination="@id/tutorialFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_from_right" />
    </fragment>
    <fragment
        android:id="@+id/tutorialFragment"
        android:name="com.android.topscare.ui.setting.tutorial.TutorialFragment"
        android:label="TutorialFragment"
        tools:layout="@layout/fragment_tutorial"/>

</navigation>