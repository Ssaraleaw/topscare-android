<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.android.topscare.ui.main.MainMenuViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HomeFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/page_side_margin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/page_side_margin" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="@dimen/status_bar_height"
            app:layout_constraintEnd_toEndOf="@id/end_guideline"
            app:layout_constraintStart_toStartOf="@id/start_guideline"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_height="54dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginLeft="60dp"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/label_main_menu"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_main_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:maxLines="1"
                android:text="@string/label_main_menu"
                style="@style/TextAppearance.Headline4"
                android:textColor="@color/gray_700"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Main Menu" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bg"
            android:alpha=".5"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/size_6"
            app:layout_constraintBottom_toTopOf="@id/label_device_name"
            app:layout_constraintEnd_toEndOf="@id/end_guideline"
            app:layout_constraintStart_toStartOf="@id/start_guideline"
            app:layout_constraintTop_toBottomOf="@id/toolbar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow android:weightSum="2">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/size_16"
                            android:background="@drawable/bg_menu"
                            android:padding="@dimen/size_20">

                            <ImageButton
                                android:id="@+id/iv_menu"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="end|center_vertical"
                                android:adjustViewBounds="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_count"
                                app:layout_constraintBottom_toTopOf="@id/menu_name"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/menu_name"
                                style="@style/TextAppearance.BodyParagraph"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/size_8"
                                android:textColor="@color/gray_600"
                                android:text="@string/count"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/iv_menu"
                                tools:text="Count" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/size_16"
                            android:background="@drawable/bg_menu"
                            android:padding="@dimen/size_20">

                            <ImageButton
                                android:id="@+id/iv_menu1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="end|center_vertical"
                                android:adjustViewBounds="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_check"
                                tools:src="@drawable/ic_check"
                                app:layout_constraintBottom_toTopOf="@id/menu_name1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/menu_name1"
                                style="@style/TextAppearance.BodyParagraph"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/size_8"
                                android:textColor="@color/gray_600"
                                android:text="@string/check"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/iv_menu1"
                                tools:text="Check" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </TableRow>

                    <TableRow android:weightSum="2">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/size_16"
                            android:background="@drawable/bg_menu"
                            android:padding="@dimen/size_20">

                            <ImageButton
                                android:id="@+id/iv_menu2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="end|center_vertical"
                                android:adjustViewBounds="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_order"
                                app:layout_constraintBottom_toTopOf="@id/menu_name2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/menu_name2"
                                style="@style/TextAppearance.BodyParagraph"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/size_8"
                                android:textColor="@color/gray_600"
                                android:text="@string/order"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/iv_menu2"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/size_16"
                            android:background="@drawable/bg_menu"
                            android:padding="@dimen/size_20">

                            <ImageButton
                                android:id="@+id/iv_menu3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="end|center_vertical"
                                android:adjustViewBounds="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_receive"
                                app:layout_constraintBottom_toTopOf="@id/menu_name3"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/menu_name3"
                                style="@style/TextAppearance.BodyParagraph"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/size_8"
                                android:textColor="@color/gray_600"
                                android:text="@string/receive"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/iv_menu3"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </TableRow>

                    <TableRow android:weightSum="2">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/size_16"
                            android:background="@drawable/bg_menu"
                            android:padding="@dimen/size_20">

                            <ImageButton
                                android:id="@+id/iv_menu4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="end|center_vertical"
                                android:adjustViewBounds="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_setting"
                                app:layout_constraintBottom_toTopOf="@id/menu_name4"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/menu_name4"
                                style="@style/TextAppearance.BodyParagraph"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/size_8"
                                android:textColor="@color/gray_600"
                                android:text="@string/setting"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/iv_menu4"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            android:layout_margin="@dimen/size_16"
                            android:background="@drawable/bg_menu"
                            android:padding="@dimen/size_20">

                            <ImageButton
                                android:id="@+id/iv_menu5"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="end|center_vertical"
                                android:adjustViewBounds="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_check"
                                tools:src="@drawable/ic_check"
                                app:layout_constraintBottom_toTopOf="@id/menu_name5"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/menu_name5"
                                style="@style/TextAppearance.BodyParagraph"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/size_8"
                                android:textColor="@color/gray_600"
                                android:text="@string/check"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/iv_menu5"
                                tools:text="Check" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/label_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginBottom="@dimen/size_8"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:maxLines="1"
            android:text="@{viewModel._deviceName}"
            android:textAppearance="@style/TextAppearance.Body"
            android:textColor="@color/gray_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/end_guideline"
            app:layout_constraintStart_toStartOf="@id/start_guideline"
            tools:text="Device : name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>