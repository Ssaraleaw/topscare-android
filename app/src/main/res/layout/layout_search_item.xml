<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_name"
        android:enabled="false"
        style="@style/ActionButtonTheme.Secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="16sp"
        android:layout_marginRight="@dimen/size_16"
        android:textAlignment="textStart"
        android:text="@{viewModel._versoin_code}"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toStartOf="@id/label_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Paracetamol 500 mg"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_date"
        android:enabled="false"
        style="@style/TextAppearance.BodyTiny"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="16sp"
        android:paddingLeft="@dimen/size_8"
        android:paddingBottom="@dimen/size_8"
        android:layout_marginRight="@dimen/size_16"
        android:textAlignment="textStart"
        android:text="@{viewModel._versoin_code}"
        android:textColor="@color/gray_500"
        app:layout_constraintEnd_toStartOf="@id/label_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_name"
        tools:text="04 Jan 2022 12:00"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_amount"
        android:enabled="false"
        style="@style/TextAppearance.Headline7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:maxLines="1"
        android:textSize="16sp"
        android:layout_margin="@dimen/size_16"
        android:textAlignment="textStart"
        android:text="@{viewModel._versoin_code}"
        android:textColor="@color/gray_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="500"/>
</androidx.constraintlayout.widget.ConstraintLayout>