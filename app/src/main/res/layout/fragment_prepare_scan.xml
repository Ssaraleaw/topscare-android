<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.android.topscare.domain.data.ScanMode"/>
        <variable
            name="viewModel"
            type="com.android.topscare.ui.scanning.PrepareScanViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/page_side_margin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/page_side_margin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/status_bar_height" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginTop="@dimen/page_side_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:onClick="@{()->viewModel.onBackPressed()}"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="@id/start_guideline"
            app:layout_constraintTop_toTopOf="@id/top_guideline" />

        <TextView
            android:id="@+id/label_title_page"
            style="@style/TextAppearance.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginTop="@dimen/size_16"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:maxLines="1"
            android:text="@{viewModel._title}"
            android:textColor="@color/gray_700"
            app:layout_constraintStart_toStartOf="@id/start_guideline"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            tools:text="Setting" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:alpha=".5"
            android:src="@drawable/bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_scanner"
            app:layout_constraintBottom_toTopOf="@+id/layout_btn"
            app:layout_constraintEnd_toEndOf="@id/end_guideline"
            app:layout_constraintStart_toStartOf="@id/start_guideline"
            app:layout_constraintTop_toBottomOf="@id/label_title_page" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_24"
            android:layout_marginEnd="@dimen/size_14"
            android:layout_marginStart="@dimen/size_14"
            app:layout_constraintEnd_toEndOf="@id/end_guideline"
            app:layout_constraintStart_toStartOf="@id/start_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_continue"
                style="@style/ActionButtonTheme.Primary"
                android:layout_width="match_parent"
                android:enabled="@{!viewModel.dataStates.isLoading()}"
                android:onClick="@{() -> viewModel.onCameraPressed()}"
                android:text="@string/use_camera" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_history"
                style="@style/ActionButtonTheme.Secondary"
                android:layout_width="match_parent"
                app:isVisible="@{viewModel._scanMode != ScanMode.CHECK}"
                android:enabled="@{!viewModel.dataStates.isLoading()}"
                android:onClick="@{() -> viewModel.onCameraPressed()}"
                android:text="@string/show_all_history"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_700"
            android:alpha="0.6"
            app:isVisible="@{viewModel.dataStates.isLoading()}"
            />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:animatedVisibility="@{viewModel.dataStates.isLoading()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>